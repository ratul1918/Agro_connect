# ===========================================
# AGRO CONNECT - Environment Variables Example
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=agro_connect
DB_USERNAME=root
DB_PASSWORD=your_mysql_password_here

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Generate a secure random base64 string (minimum 256 bits)
# You can use: openssl rand -base64 64
JWT_SECRET=404E635266556A586E3272357538782F413F4428472B4B6250645367566B5970
JWT_EXPIRATION=86400000

# ===========================================
# EMAIL/SMTP CONFIGURATION
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password_here

# ===========================================
# AI API KEYS
# ===========================================
# Gemini API Key (for AI features) - Get from https://aistudio.google.com/app/apikey
AI_GEMINI_KEY=your_gemini_api_key_here

# ===========================================
# GOOGLE OAUTH2 CONFIGURATION
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
# Initial admin user credentials (created on first run)
ADMIN_EMAIL=admin@agro.com
ADMIN_PASSWORD=admin123

# ===========================================
# FRONTEND URL
# ===========================================
# Used for OAuth redirects and email links
FRONTEND_URL=http://localhost:5173

# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_PORT=8080

